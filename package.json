{
  "name": "mcp-proxy-server",
  "version": "1.0.0",
  "description": "MCP Proxy Server - Bridge stdio MCP servers to Streamable HTTP transport",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t mcp-proxy-server .",
    "docker:run": "docker compose up -d"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "proxy",
    "stdio",
    "http",
    "streamable"
  ],
  "author": "Luke Zautke",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "uuid": "^13.0.0",
    "zod": "^4.1.12",
    "dotenv": "^17.2.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/cors": "^2.8.19",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/ui": "^4.0.5",
    "eslint": "^9.38.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.5",
    "@vitest/coverage-v8": "^4.0.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.20.0"
}
