{
  "name": "mcp-proxy-server",
  "version": "1.0.0",
  "description": "MCP Proxy Server - Bridge stdio MCP servers to Streamable HTTP transport",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t mcp-proxy-server .",
    "docker:run": "docker compose up"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "proxy",
    "stdio",
    "http",
    "streamable"
  ],
  "author": "Luke Zautke",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.0",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "uuid": "^11.0.5",
    "zod": "^3.24.1",
    "dotenv": "^16.4.7",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/ui": "^2.2.0",
    "eslint": "^9.17.0",
    "playwright": "^1.50.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.5",
    "vitest": "^2.2.0",
    "@vitest/coverage-v8": "^2.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
